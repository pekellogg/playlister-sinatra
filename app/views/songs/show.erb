<%if flash.has?(:message)%> <%=flash[:message]%> <%end%>

<h1><%=@song.name%></h1>
<h2>By artist, <a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></h2>
<%@song.genres.each do |genre|%>
  <h3>Genre: <a href="/genres/<%=genre.slug%>"><%=genre.name%></a></h3>
<%end%>

<a class="button" href="/songs/<%=@song.slug%>/edit">Edit Song</a> | 
<a class="button" href="/songs">Back to Songs</a>